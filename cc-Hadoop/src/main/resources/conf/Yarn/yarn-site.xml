<?xml version="1.0"?>

<!--### yarn资源调度：yarn-site.xml ###-->
<!--### 分发到其它机器 ###-->

<!--文件位置：/opt/module/hadoop-2.7.7/etc/hadoop/yarn-site.xml-->
<!--官网位置：https://hadoop.apache.org/docs/r2.7.7/hadoop-project-dist/hadoop-common/yarn-default.xml-->

<configuration>

    <!--资源管理器ResourceManager所在主机-->
    <property>
        <name>yarn.resourcemanager.hostname</name>
        <value>bd91</value>
    </property>

    <!--允许MR任务运行在所有NodeManager节点-->
    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce_shuffle</value>
    </property>

</configuration>

